# version
# Configuration name mysql119 generated for baruch@brillix.co.il
#
# MASTER DATABASE DEV
#

[client]

# CLIENT #
#port                           = 3306
#socket                         = /data/mysql01/mysql.sock
#user                           = root
#password                       = oracle
#UTF8
#default-character-set=utf8



[mysql]

# CLIENT #
port                           = 3306
#socket                         = /data/mysql01/mysql.sock
#UTF8
protocol                       =tcp
default-character-set=utf8
compress
show-warnings
prompt = \R:\m \d>\_
#prompt = PROD@\U[\d]>\_


##################################
# mysql server 1
#
#################################

[mysqld1]
#skip-grant-tables
#basedir=  /usr/local/mysql/

# GENERAL #
port = 3306
#bind-address                   = 192.168.56.200
user                           = mysql
default_storage_engine         = InnoDB
socket                         = /u01/data/mysql01/mysql.sock
pid_file                       = /u01/data/mysql01/mysql.pid
#UTF8
character-set-server=utf8


# MyISAM #
key_buffer_size                = 32M
myisam_recover                 = FORCE,BACKUP

# SAFETY #
max_allowed_packet             = 16M
max_connect_errors             = 1000000
#skip_name_resolve
sql_mode                       = STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_AUTO_VALUE_ON_ZERO,NO_ENGINE_SUBSTITUTION,NO_ZERO_DATE,NO_ZERO_IN_DATE,ONLY_FULL_GROUP_BY
sysdate_is_now                 = 1
innodb                         = FORCE
innodb_strict_mode             = 0
innodb_print_all_deadlocks     = 1


# DATA STORAGE #
##not NFS##
datadir                        = /u01/data/mysql01/

# BINARY LOGGING #
log-bin                        = /u01/data/mysql01/mysql-bin
expire_logs_days               = 2
#for replication
sync_binlog                    = 1
log_bin_trust_function_creators = 1
# REPLICATION #
#read_only                      = 1
skip_slave_start               = 1
log_slave_updates              = 1
relay_log                      = /u01/data/mysql01/relay-bin
slave_net_timeout              = 500
sync_master_info               = 1
sync_relay_log                 = 1
sync_relay_log_info            = 1
binlog_format                  = MIXED

#replication#
server-id=1
relay-log-recovery=1
master-info-repository=TABLE
relay-log-info-repository=TABLE
gtid-mode=ON
enforce-gtid-consistency

# CACHES AND LIMITS #
tmp_table_size                 = 32M
max_heap_table_size            = 32M
query_cache_type               = 0
query_cache_size               = 0
max_connections                = 200
thread_cache_size              = 20
open_files_limit               = 65535
table_definition_cache         = 4096
#(max_connections * N), where N is the maximum number of tables
#per join in any of the queries which you execute. (You must also reserve some extra file descriptors for temporary tables and files.)
table_open_cache               = 400

# INNODB #
innodb_flush_method            = O_DIRECT
innodb_log_files_in_group      = 2
#innodb_log_file_size           = 512M
innodb_log_file_size           = 600M
#for replicatio
innodb_flush_log_at_trx_commit = 1
innodb_file_per_table          = 1
#innodb_buffer_pool_size =  70-80% of memory
innodb_buffer_pool_size        = 500M
innodb_io_capacity = 5000
# LOGGING #
log_error                      = /u01/data/mysql01/mysql-error.log
log_queries_not_using_indexes  = 1
slow_query_log                 = 1
slow_query_log_file            = /u01/data/mysql01/mysql-slow.log
long_query_time		       = 1
innodb_autoinc_lock_mode = 2
init_connect='SET foreign_key_checks = 0'
#performance_schema
performance_schema=on
performance_schema_events_waits_history_size=20
performance_schema_events_waits_history_long_size=15000
performance-schema-instrument='wait/synch/cond/%=counted'
#sort#
sort_buffer_size=4194304

